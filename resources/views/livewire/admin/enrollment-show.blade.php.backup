<?php

use App\Models\Enrollment;
use App\Services\StripeService;
use Livewire\Volt\Component;

new class extends Component {
    public Enrollment $enrollment;

    public function mount(): void
    {
        $this->enrollment->load(['student.user', 'course.feeSettings', 'enrolledBy', 'orders']);
    }

    public function createSubscription()
    {
        try {
            if (!$this->enrollment->course->feeSettings) {
                session()->flash('error', 'Course must have fee settings configured first.');
                return;
            }

            if (!$this->enrollment->course->feeSettings->stripe_price_id) {
                session()->flash('error', 'Course must be synced with Stripe first. Go to Course Edit page and click "Sync to Stripe".');
                return;
            }

            // Check if student has payment methods
            $paymentMethods = $this->enrollment->student->user->paymentMethods()->active()->count();
            
            if ($paymentMethods === 0) {
                session()->flash('warning', 'Student must add a payment method first. Direct them to their Payment Methods page.');
                return;
            }

            session()->flash('info', 'Ready to create subscription! This would typically create a Stripe subscription for the student.');
            
            // In a real implementation, you would:
            // 1. Get student's default payment method
            // 2. Call StripeService->createSubscription()
            // 3. Update enrollment with subscription ID
            
        } catch (\Exception $e) {
            session()->flash('error', 'Failed to create subscription: ' . $e->getMessage());
        }
    }

    public function cancelSubscription()
    {
        try {
            if (!$this->enrollment->stripe_subscription_id) {
                session()->flash('error', 'No active subscription found.');
                return;
            }

            $stripeService = app(StripeService::class);
            $stripeService->cancelSubscription($this->enrollment->stripe_subscription_id, false);
            
            session()->flash('success', 'Subscription will be canceled at the end of the current billing period.');
            
        } catch (\Exception $e) {
            session()->flash('error', 'Failed to cancel subscription: ' . $e->getMessage());
        }
    }

    public function pauseSubscription()
    {
        try {
            if (!$this->enrollment->stripe_subscription_id) {
                session()->flash('error', 'No active subscription found.');
                return;
            }

            $stripeService = app(StripeService::class);
            $stripeService->pauseSubscription($this->enrollment->stripe_subscription_id);
            
            session()->flash('success', 'Subscription paused successfully.');
            
        } catch (\Exception $e) {
            session()->flash('error', 'Failed to pause subscription: ' . $e->getMessage());
        }
    }

    public function resumeSubscription()
    {
        try {
            if (!$this->enrollment->stripe_subscription_id) {
                session()->flash('error', 'No subscription found.');
                return;
            }

            $stripeService = app(StripeService::class);
            $stripeService->resumeSubscription($this->enrollment->stripe_subscription_id);
            
            session()->flash('success', 'Subscription resumed successfully.');
            
        } catch (\Exception $e) {
            session()->flash('error', 'Failed to resume subscription: ' . $e->getMessage());
        }
    }
}; ?>

